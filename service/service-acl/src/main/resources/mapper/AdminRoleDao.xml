<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yalong.dao.AdminRoleDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        select id, role_id, admin_id, create_time, update_time, is_deleted
        from acl_admin_role
    </sql>

<!--   根据用户id查询已选择角色的角色id  -->
    <select id="findRoleIdsByAdminId" resultType="long">
        select role_id
        from acl_admin_role
        where admin_id = #{adminId} and is_deleted = 0
    </select>

<!--  根据用户id删除已非配角色  -->
    <update id="deleteRoleIdsByAdminId">
        update acl_admin_role
        set is_deleted = 1
        where admin_id = #{adminId}
    </update>

<!--  重写插入已分配角色  -->
    <insert id="addRoleIdAndAdminId">
        insert into acl_admin_role(role_id,admin_id)
        values (#{roleId}, #{adminId})
    </insert>
</mapper>